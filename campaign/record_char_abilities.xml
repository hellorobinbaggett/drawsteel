<root>
	<windowclass name="charsheet_actions">
		<sheetdata>
			<!-- actions  section-->
			<frame_char name="actionsframe">
				<bounds>0,0,-1,150</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="actionsframe" />
				<static textres="char_label_actions" />
			</label_frametop>
			<list_text name="actions">
				<anchored to="actionsframe">
					<left offset="15" />
					<top offset="35" />
					<right offset="-20" />
					<bottom offset="-10" />
				</anchored>
				<datasource>.actionslist</datasource>
				<class>char_action</class>
				<acceptdrop>
					<class>ability</class>
					<field>*</field>
				</acceptdrop>
			</list_text>
			
			<scrollbar_list>
				<anchored to="actions" />
				<target>actions</target>
			</scrollbar_list>

			<button_iedit name="actions_iedit">
				<anchored to="actions" position="aboveright" offset="-15,5" />
				<edittarget>actions</edittarget>
			</button_iedit>
			<button_iadd name="actions_iadd">
				<anchored to="actions" position="aboveright" offset="5,5" />
				<target>actions</target>
			</button_iadd>	

			<!-- signature abilities  section-->
			<frame_char name="signatureabilitiesframe">
				<bounds>0,150,-1,150</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="signatureabilitiesframe" />
				<static textres="char_label_signatureabilities" />
			</label_frametop>
			<list_text name="signatureabilities">
				<anchored to="signatureabilitiesframe">
					<left offset="15" />
					<top offset="35" />
					<right offset="-20" />
					<bottom offset="-10" />
				</anchored>
				<datasource>.signatureabilities</datasource>
				<class>char_action</class>
				<acceptdrop>
					<class>ability</class>
					<field>*</field>
				</acceptdrop>
			</list_text>
			
			<scrollbar_list>
				<anchored to="signatureabilities" />
				<target>signatureabilities</target>
			</scrollbar_list>

			<button_iedit name="signatureabilities_iedit">
				<anchored to="signatureabilities" position="aboveright" offset="-15,5" />
				<edittarget>signatureabilities</edittarget>
			</button_iedit>
			<button_iadd name="signatureabilities_iadd">
				<anchored to="signatureabilities" position="aboveright" offset="5,5" />
				<target>signatureabilities</target>
			</button_iadd>	

			<!-- heroic abilities  section-->
			<frame_char name="heroicabilitiesframe">
				<bounds>0,300,-1,-5</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="heroicabilitiesframe" />
				<static textres="char_label_heroicabilities" />
			</label_frametop>
			<list_text name="heroicabilities">
				<anchored to="heroicabilitiesframe">
					<left offset="15" />
					<top offset="35" />
					<right offset="-20" />
					<bottom offset="-10" />
				</anchored>
				<datasource>.heroicabilitieslist</datasource>
				<class>char_action</class>
				<acceptdrop>
					<class>ability</class>
					<field>*</field>
				</acceptdrop>
			</list_text>
			
			<scrollbar_list>
				<anchored to="heroicabilities" />
				<target>heroicabilities</target>
			</scrollbar_list>

			<button_iedit name="heroicabilities_iedit">
				<anchored to="heroicabilities" position="aboveright" offset="-15,5" />
				<edittarget>heroicabilities</edittarget>
			</button_iedit>
			<button_iadd name="heroicabilities_iadd">
				<anchored to="heroicabilities" position="aboveright" offset="5,5" />
				<target>heroicabilities</target>
			</button_iadd>		

		</sheetdata>
	</windowclass>

	    <windowclass name="char_action">
		<margins control="0,0,0,2" />
		<sheetdata>
			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top offset="2" />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete1">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<editmode>actions_iedit</editmode>
			</button_idelete>
			<button_idelete name="idelete2">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<editmode>signatureabilities_iedit</editmode>
			</button_idelete>
			<button_idelete name="idelete3">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<editmode>heroicabilities_iedit</editmode>
			</button_idelete>
			<button_idelete name="idelete4">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<editmode>features_iedit</editmode>
			</button_idelete>
			<linkcontrol_static name="link">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<class>ability</class>
			</linkcontrol_static>
			<string_textlistitem name="name">
				<anchored to="rightanchor">
					<top />
					<left parent="" offset="5" />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</string_textlistitem>
		</sheetdata>
	</windowclass>	
</root>
