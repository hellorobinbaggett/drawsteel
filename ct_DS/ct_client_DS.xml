<root>
	<!-- General combat tracker window -->
	<windowclass name="combattracker_client">
		<frame>ctbox</frame>
		<sizelimits>
			<minimum width="400" height="400" />
			<dynamic />
		</sizelimits>
		<softclose />
		<script file="ct/scripts/clientct_window.lua" />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>ct_window_title</resource>
			</windowtitlebar>
			<anchor_title_ctbox name="contentanchor" />

			<resize_ctbox />
			<helper_ct />
			<close_ctbox />
		</sheetdata>
	</windowclass>
</root>
